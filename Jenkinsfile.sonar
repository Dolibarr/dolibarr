pipeline {
  agent any
  stages {
    stage('SCM') {
      steps {
        checkout scm
      }
    }
    stage('SonarQube Analysis') {
      steps {
        script {
          def scannerHome = tool name: 'SonarQube_scanner';
          withSonarQubeEnv('SonarQube') {
            sh "${scannerHome}/bin/sonar-scanner \ -Dproject.settings=sonar-project.properties"
          }
        }
      }
    }
  }
}
