pipeline {
  agent any
  stages {
    stage('SCM') {
      steps {
        checkout scm
      }
    }
    stage('SonarQube Analysis') {
      steps {
        script {
          def scannerHome = tool 'SonarQube_Scanner';
          withSonarQubeEnv('SonarQube_Server') {
            sh 'export SONAR_SCANNER_OPTS="-Xmx512m"'
            sh "${scannerHome}/bin/sonar-scanner"
          }
        }
      }
    }
  }
}
