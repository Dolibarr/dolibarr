# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
[*.php]
indent_style = space
indent_size = 4
[*.js]
indent_style = space
indent_size = 2
[*.css]
indent_style = space
indent_size = 2
[*.xml]
indent_style = space
indent_size = 4
