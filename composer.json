        "ckeditor/ckeditor": "4.5.9",
        "mike42/escpos-php": "1.2.1",
        "mobiledetect/mobiledetectlib": "2.8.17",
        "phpoffice/phpexcel": "1.8.1",
        "restler/framework": "3.0.0-RC6",
        "tecnickcom/tcpdf": "6.2.12"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0",
